<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:layout_marginTop="10dp"
    tools:context=".registerTeacherActivity">


    <TextView
        android:id="@+id/regForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:text="Registration Form (Teacher)"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/firstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="8"
        android:inputType="textPersonName"
        android:hint="First Name"
        android:layout_below="@id/regForm"
        />

    <EditText
        android:id="@+id/lastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        android:layout_alignParentRight="true"
        android:inputType="textPersonName"
        android:layout_below="@id/regForm"
        android:ems="8" />

    <EditText
        android:id="@+id/mobileNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mobile Number"
        android:inputType="phone"
        android:layout_below="@id/firstName"
        android:layout_marginTop="20dp"
        android:ems="10" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:layout_below="@id/mobileNo"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/specialization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Qualification"
        android:inputType="text"
        android:layout_marginTop="20dp"
        android:layout_below="@id/email"/>


    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="User Name"
        android:layout_below="@id/specialization"
        android:layout_marginTop="20dp"/>


    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="New Password"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"
        android:layout_below="@id/username"/>


    <EditText
        android:id="@+id/cPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"
        android:layout_below="@id/password"/>

    <androidx.appcompat.widget.AppCompatCheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/showPassword"
        android:text="Show password"
        android:layout_marginTop="10dp"
        android:layout_below="@id/cPassword"
        />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register!"
        android:textColor="@color/colorWhite"
        android:textAllCaps="false"
        android:background="@drawable/all_curved_corners"
        android:backgroundTint="@color/colorLogin"
        android:layout_marginVertical="50dp"
        android:padding="10dp"
        android:layout_marginHorizontal="90dp"
        android:layout_below="@id/showPassword"/>

</RelativeLayout>
</ScrollView>