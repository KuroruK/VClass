<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ac_row1"
        android:background="@drawable/solid_btn"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="5dp"
        android:elevation="4dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ac_menu"
            android:src="@drawable/ic_menu"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:src="@drawable/logo"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ac_row2"
        android:background="@drawable/solid_btn"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="15dp"
        android:padding="10dp"
        android:layout_below="@id/ac_row1"
        android:elevation="4dp"
        >

        <ImageView
            android:layout_width="21dp"
            android:layout_height="20dp"
            android:id="@+id/ac_search1"
            android:src="@drawable/search"
            android:layout_centerVertical="true"
            />

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ac_search2"
            android:hint="Search"
            android:completionThreshold="1"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginEnd="45dp"
            android:background="@android:color/transparent"
            android:layout_toRightOf="@id/ac_search1"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginRight="45dp"
            android:layout_marginLeft="10dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/mid_grey"
            android:id="@+id/ac_search3"
            android:layout_marginStart="-32dp"
            android:layout_toRightOf="@id/ac_search2"
            android:layout_centerVertical="true"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/background"
            android:layout_marginLeft="-32dp" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ac_rcv"
        android:layout_marginHorizontal="15dp"
        android:layout_below="@id/ac_row2"
        />

</RelativeLayout>