<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".EditCourseActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/edit_crs_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:text="Edit Courses"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/edit_crs_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_crs_details"
            android:layout_marginStart="10dp"
            android:text="Name: "
            android:textColor="@color/colorLightGrey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/edit_crs_name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_crs_details"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="@id/edit_crs_crd_hrs"
            android:layout_toEndOf="@id/edit_crs_crd_hrs"
            android:background="@drawable/custom_spinner_boundary"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_crs_name2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_crs_details"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="@id/edit_crs_crd_hrs"
            android:layout_toEndOf="@id/edit_crs_crd_hrs"
            android:background="@null"
            android:hint="name here"
            android:textColor="@color/colorLightGrey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/edit_crs_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_crs_name"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Course Code:"
            android:textColor="@color/colorLightGrey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/edit_crs_id1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_crs_name"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="@id/edit_crs_crd_hrs"
            android:layout_toEndOf="@id/edit_crs_crd_hrs"
            android:background="@drawable/custom_spinner_boundary"
            android:textColor="@color/colorLightGrey"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edit_crs_id2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_crs_name"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="@id/edit_crs_crd_hrs"
            android:layout_toEndOf="@id/edit_crs_crd_hrs"
            android:background="@null"
            android:hint="id here"
            android:textColor="@color/colorLightGrey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/edit_crs_crd_hrs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_crs_id"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Credit Hourse:"
            android:textColor="@color/colorLightGrey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/edit_crs_crd_hrs1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_crs_id"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="@id/edit_crs_crd_hrs"
            android:layout_toEndOf="@id/edit_crs_crd_hrs"
            android:background="@drawable/custom_spinner_boundary"
            android:textColor="@color/colorLightGrey"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edit_crs_crd_hrs2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_crs_id"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="@id/edit_crs_crd_hrs"
            android:layout_toEndOf="@id/edit_crs_crd_hrs"
            android:background="@null"
            android:hint="credit hours here"
            android:textColor="@color/colorLightGrey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/edit_crs_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_crs_crd_hrs"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:text="Description:"
            android:textColor="@color/colorLightGrey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/edit_crs_desc1"
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:layout_below="@id/edit_crs_desc"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_spinner_boundary"
            android:textColor="@color/colorLightGrey"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edit_crs_desc2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_crs_desc"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="5dp"

            android:layout_marginBottom="15dp"
            android:background="@null"
            android:hint="description here"
            android:textColor="@color/colorLightGrey"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_save_edit_crs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_crs_desc1"
            android:layout_marginHorizontal="90dp"
            android:layout_marginVertical="50dp"
            android:background="@drawable/all_curved_corners"
            android:backgroundTint="@color/colorEdit"
            android:padding="10dp"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>
</ScrollView>