<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_rec"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginVertical="3dp"
    android:background="@drawable/rcv_msg_box"
    android:elevation="3dp"
    android:paddingHorizontal="10dp"
    android:paddingVertical="5dp">

    <TextView
        android:id="@+id/row_rm_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sender"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/row_rm_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/row_rm_username"
        android:layout_marginVertical="2dp"
        android:text="Hi"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/row_rm_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/row_rm_msg"
        android:text="Time"
        android:textColor="@color/grey_hint"
        android:textSize="12sp" />

</RelativeLayout>