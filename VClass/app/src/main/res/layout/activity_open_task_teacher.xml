<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/task_open_teacher_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="Task Title"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="22dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/task_open_teacher_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_open_teacher_title"
            android:layout_marginTop="10dp"
            android:text="Description:"
            android:textColor="@color/colorLightGrey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/task_open_teacher_desc2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_open_teacher_title"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/task_open_teacher_marks"
            android:text="desc"
            android:textColor="@color/colorLightGrey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/task_open_teacher_due"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_open_teacher_desc2"
            android:layout_marginTop="10dp"
            android:text="Due Date:"
            android:textColor="@color/colorLightGrey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/task_open_teacher_due2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_open_teacher_desc2"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/task_open_teacher_marks"
            android:text="dd/mm/yyyy"
            android:textColor="@color/colorLightGrey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/task_open_teacher_marks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_open_teacher_due"
            android:layout_marginTop="10dp"
            android:text="Total Marks:"
            android:textColor="@color/colorLightGrey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/task_open_teacher_marks2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_open_teacher_due"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/task_open_teacher_marks"
            android:text="10"
            android:textColor="@color/colorLightGrey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/task_open_teacher_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_open_teacher_marks2"
            android:layout_marginTop="30dp"
            android:text="Submissions"
            android:textColor="@color/colorLightGrey"
            android:textSize="18sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvList_files"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_open_teacher_file"
            android:layout_marginTop="10dp" />

    </RelativeLayout>
</ScrollView>