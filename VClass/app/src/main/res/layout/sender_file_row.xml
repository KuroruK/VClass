<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/row_file_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginVertical="3dp"
        android:background="@drawable/sent_msg_box"
        android:elevation="3dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp">

        <RelativeLayout
            android:id="@+id/row_file0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/row_file"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/attached_file" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/file_sender_msg0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_file0"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="2dp">

            <TextView
                android:id="@+id/file_sender_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="filename"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/file_sender_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/file_sender_msg0"
            android:text="time"
            android:textColor="@color/grey_hint"
            android:textSize="12sp" />

    </RelativeLayout>

</RelativeLayout>