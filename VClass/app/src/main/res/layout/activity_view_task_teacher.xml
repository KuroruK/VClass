<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/task_v_teacher_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Task Title"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/task_v_std_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_v_teacher_title"
            android:layout_marginTop="30dp"
            android:text="Student Details"
            android:textColor="@color/colorLightGrey"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/task_v_std_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_v_std_details"
            android:layout_marginTop="10dp"
            android:text="ID: "
            android:textColor="@color/colorLightGrey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/task_v_std_id2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_v_std_details"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/task_v_teacher_om"
            android:text="N/A"
            android:textColor="@color/colorLightGrey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/task_v_std_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_v_std_id"
            android:layout_marginTop="10dp"
            android:text="Name:"
            android:textColor="@color/colorLightGrey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/task_v_std_name2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_v_std_id"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/task_v_teacher_om"
            android:text="N/A"
            android:textColor="@color/colorLightGrey"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/task_v_teacher_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_v_std_name"
            android:layout_marginTop="30dp"
            android:text="Submitted Files"
            android:textColor="@color/colorLightGrey"
            android:textSize="18sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvList_files"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_v_teacher_file"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/task_v_teacher_om"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rvList_files"
            android:layout_marginTop="30dp"
            android:text="Obtained Marks:"
            android:textColor="@color/colorLightGrey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/task_v_teacher_om2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rvList_files"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@id/task_v_teacher_om"
            android:background="@drawable/custom_spinner_boundary"
            android:inputType="number"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/task_v_teacher_om3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rvList_files"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@id/task_v_teacher_om"
            android:background="@android:color/transparent"
            android:hint="Enter marks"
            android:textColor="@color/colorLightGrey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/task_v_teacher_fb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_v_teacher_om"
            android:layout_marginTop="10dp"
            android:text="Feedback:"
            android:textColor="@color/colorLightGrey"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/task_v_teacher_fb0"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/task_v_teacher_om"
            android:layout_toEndOf="@id/task_v_teacher_om">

            <TextView
                android:id="@+id/task_v_teacher_fb2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_spinner_boundary"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/task_v_teacher_db3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@android:color/transparent"
                android:hint="Enter your comments here"
                android:textColor="@color/colorLightGrey"
                android:textSize="16sp" />
        </RelativeLayout>


        <!--buttons-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/task_v_teacher_fb0"
            android:layout_marginVertical="30dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:padding="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal">

                    <Button
                        android:id="@+id/t_vut_e_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/all_curved_corners"
                        android:backgroundTint="@color/colorEdit"
                        android:text="Save"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:padding="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal">

                    <Button
                        android:id="@+id/t_vut_b_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/all_curved_corners"
                        android:backgroundTint="@color/colorDelete"
                        android:text="Back"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</ScrollView>