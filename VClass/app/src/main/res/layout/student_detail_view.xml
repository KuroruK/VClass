        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Course 2 here"
            android:id="@+id/s_course21"
            android:textSize="16sp"
            android:textColor="@color/colorLightGrey"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/s_course1"
            android:layout_toRightOf="@id/s_contact"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course 3: "
            android:id="@+id/s_course3"
            android:textSize="16sp"
            android:textColor="@color/colorLightGrey"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/s_course21"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Course 3 here"
            android:id="@+id/s_course31"
            android:textSize="16sp"
            android:textColor="@color/colorLightGrey"
            android:layout_marginTop="10dp"
