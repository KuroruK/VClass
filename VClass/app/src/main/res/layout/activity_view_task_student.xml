<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/task_submit_std_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="Task Title"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/task_submit_std_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_submit_std_title"
            android:layout_marginTop="10dp"
            android:text="Description:"
            android:textColor="@color/colorLightGrey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/task_submit_std_desc2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_submit_std_title"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/task_submit_std_marks"
            android:text="desc"
            android:textColor="@color/colorLightGrey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/task_submit_std_due"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_submit_std_desc2"
            android:layout_marginTop="10dp"
            android:text="Due Date:"
            android:textColor="@color/colorLightGrey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/task_submit_std_due2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_submit_std_desc2"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/task_submit_std_marks"
            android:text="dd/mm/yyyy"
            android:textColor="@color/colorLightGrey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/task_submit_std_marks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_submit_std_due"
            android:layout_marginTop="10dp"
            android:text="Total Marks:"
            android:textColor="@color/colorLightGrey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/task_submit_std_marks2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_submit_std_due"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/task_submit_std_marks"
            android:text="10"
            android:textColor="@color/colorLightGrey"
            android:textSize="16sp" />




        <TextView
            android:id="@+id/task_files"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_submit_std_marks"
            android:layout_marginTop="30dp"
            android:text="Task Files"
            android:textColor="@color/colorLightGrey"
            android:textSize="18sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvList_task_files"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_files"
            android:layout_marginTop="10dp" />


        <TextView
            android:id="@+id/task_submit_std_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rvList_task_files"
            android:layout_marginTop="20dp"
            android:text="Submitted Files"
            android:textColor="@color/colorLightGrey"
            android:textSize="18sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvList_files"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_submit_std_file"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_submit_std_file"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="@color/colorLightGrey"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/task_submit_attach_file"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_below="@id/rvList_files"
            android:layout_marginTop="20dp"
            android:text="Upload File"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:backgroundTint="@color/colorPrimary"
            app:borderWidth="0dp" />

        <!--buttons-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/task_submit_attach_file"
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_marginVertical="30dp"
            >

            <LinearLayout
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Submit"
                        android:id="@+id/task_submit_std_r_btn"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/all_curved_corners"
                        android:backgroundTint="@color/colorEdit"
                        />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Back"
                        android:id="@+id/task_submit_std_b_btn"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/all_curved_corners"
                        android:backgroundTint="@color/colorDelete"
                        />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</ScrollView>