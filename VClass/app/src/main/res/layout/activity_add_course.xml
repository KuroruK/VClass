<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:padding="10dp"
    tools:context=".registerStudentActivity">


    <TextView
        android:id="@+id/regFormC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="9"
        android:text="Registration Form (Course)"
        android:gravity="center"
        android:textSize="25dp"
        android:textAllCaps="false"
        android:textColor="#000000"
        />


    <EditText
        android:id="@+id/courseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="9"
        android:inputType="textPersonName"
        android:hint="Course Name"
        android:layout_below="@id/regFormC"
        />

    <EditText
        android:id="@+id/courseCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Course Code"
        android:inputType="text"
        android:layout_below="@id/courseName"
        android:layout_marginTop="20dp"
        android:ems="10" />

    <EditText
        android:id="@+id/creditHrs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Credit Hours"
        android:inputType="number"
        android:layout_below="@id/courseCode"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:inputType="text"
        android:layout_marginTop="20dp"
        android:layout_below="@id/creditHrs"/>


    <Button
        android:id="@+id/btnSignUpC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register!"
        android:background="@drawable/smooth_edged_button"
        android:layout_marginTop="30dp"
        android:layout_below="@id/description"/>

</RelativeLayout>
</ScrollView>