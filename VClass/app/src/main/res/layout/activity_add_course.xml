<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:layout_marginTop="10dp"
    tools:context=".registerStudentActivity">


    <TextView
        android:id="@+id/regFormC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registration Form (Course)"
        android:gravity="center"
        android:textSize="25dp"
        android:textAllCaps="false"
        android:textColor="#000000"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >

        <EditText
            android:id="@+id/courseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="9"
            android:inputType="textPersonName"
            android:hint="Course Name"
            />

        <EditText
            android:id="@+id/courseCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Course Code"
            android:inputType="text"
            android:layout_below="@id/courseName"
            android:layout_marginTop="20dp"
            android:ems="10" />

        <EditText
            android:id="@+id/creditHrs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Credit Hours"
            android:inputType="number"
            android:layout_below="@id/courseCode"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:inputType="text"
            android:layout_marginTop="20dp"
            android:layout_below="@id/creditHrs"/>


        <Button
            android:id="@+id/btnSignUpC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register!"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"
            android:background="@drawable/all_curved_corners"
            android:backgroundTint="@color/colorLogin"
            android:layout_marginTop="50dp"
            android:padding="10dp"
            android:layout_marginHorizontal="50dp"
            android:layout_below="@id/description"/>
    </RelativeLayout>

</RelativeLayout>
