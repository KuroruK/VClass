<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LiveStudentClassActivity"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/live_std_name"
        android:text="Class Name"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/live_std_mic"
        android:layout_toStartOf="@id/live_std_mic"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"/>

    <ToggleButton
        android:layout_width="30dp"
        android:layout_height="47dp"
        android:id="@+id/live_std_mic"
        android:background="@drawable/toggle_mic"
        android:layout_alignParentRight="true"
        android:textOn=""
        android:textOff=""
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:onClick="micToggleClick"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/live_std_whiteboard"
        android:src="@drawable/whiteboard"
        android:layout_below="@id/live_std_mic"
        android:layout_marginTop="20dp"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/live_std_voice"
        android:layout_marginTop="20dp"
        android:layout_below="@id/live_std_mic"
        android:layout_toRightOf="@id/live_std_whiteboard">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/live_std_voice1"
            android:text="Voice"
            android:textColor="@color/colorWhite"
            android:background="@color/colorLogin"
            android:gravity="left|center_vertical"
            tools:ignore="RtlHardcoded"
            android:padding="10dp"
            />

        <ToggleButton
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:id="@+id/live_std_voice2"
            android:background="@drawable/toggle_voice"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textOn=""
            android:textOff=""
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:onClick="voiceToggleClick"/>
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/live_std_vr"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@id/live_std_voice"
        android:layout_toRightOf="@id/live_std_whiteboard"
        android:text="Virtual Reality"
        android:textColor="@color/colorWhite"
        android:background="@color/colorLightGrey"
        android:gravity="left|center_vertical"
        tools:ignore="RtlHardcoded"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/live_std_chatbox"
        android:layout_below="@id/live_std_whiteboard"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="50dp"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:elevation="7dp"
            android:background="@drawable/all_curved_corners"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="Type here..."
            android:elevation="7dp"
            android:background="@null"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@id/live_send_msg"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/live_send_msg"
            android:elevation="7dp"
            android:background="@drawable/send_msg"
            android:backgroundTint="@color/colorDarkGreen"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            />
    </RelativeLayout>

</RelativeLayout>