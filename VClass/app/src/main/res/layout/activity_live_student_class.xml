        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/live_std_tasks"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/live_std_whiteboard"
            android:background="@drawable/all_curved_corners"
            android:backgroundTint="@color/colorLogin"
            android:padding="10dp"
            android:text="Tasks"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            tools:ignore="RtlHardcoded" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/live_std_resources"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/live_std_tasks"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/live_std_whiteboard"
            android:background="@drawable/all_curved_corners"
            android:backgroundTint="@color/colorLogin"
            android:padding="10dp"
            android:text="Resources"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            tools:ignore="RtlHardcoded" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/live_std_VRMode"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/live_std_resources"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/live_std_whiteboard"
            android:background="@drawable/all_curved_corners"
            android:backgroundTint="@color/colorLogin"
