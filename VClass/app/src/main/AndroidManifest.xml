<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.vclasslogin">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        tools:replace="android:icon,android:theme"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Activities -->
        <activity
            android:name=".AdminView"
            android:parentActivityName=".LoginActivity" />
        <activity
            android:name=".ListTeacherActivity"
            android:parentActivityName=".AdminView" />
        <activity
            android:name=".TeacherView"
            android:parentActivityName=".LoginActivity" />
        <activity
            android:name=".StudentView"
            android:parentActivityName=".LoginActivity" />

        <activity android:name=".AttachFileActivity" />
        <activity android:name=".TeacherViewUploadedTaskActivity" />
        <activity android:name=".TeacherViewPreviousTaskActivity" />
        <activity android:name=".TeacherViewStudentPreviousTaskActivity" />
        <activity android:name=".StudentViewPreviousTaskActivity" />
        <activity android:name=".ViewSharedResourcesActivity" />
        <activity android:name=".ResourceSharingActivity" />

        <activity
            android:name=".RegisterTeacherActivity"
            android:parentActivityName=".ListTeacherActivity" />
        <activity
            android:name=".ViewTeacherDetailsActivity"
            android:parentActivityName=".ListTeacherActivity" />
        <activity
            android:name=".EditTeacherActivity"
            android:parentActivityName=".ListTeacherActivity" />
        <activity
            android:name=".RegisterStudentActivity"
            android:parentActivityName=".ListStudentActivity" />
        <activity
            android:name=".ViewStudentDetailsActivity"
            android:parentActivityName=".ListStudentActivity" />
        <activity
            android:name=".EditStudentActivity"
            android:parentActivityName=".ListStudentActivity" />
        <activity
            android:name=".ListStudentActivity"
            android:parentActivityName=".AdminView" />
        <activity
            android:name=".RegisterCourseActivity"
            android:parentActivityName=".ListCourseActivity" />
        <activity
            android:name=".ViewCourseDetailsActivity"
            android:parentActivityName=".ListCourseActivity" />
        <activity
            android:name=".EditCourseActivity"
            android:parentActivityName=".ListCourseActivity" />
        <activity
            android:name=".ListCourseActivity"
            android:parentActivityName=".AdminView" />

        <activity android:name=".TimeTableActivity" />
        <activity android:name=".ViewScheduleActivity" />


        <activity android:name=".StudentClassesActivity" />
        <activity android:name=".LiveStudentClassActivity" />

        <activity android:name=".StudentGroupChatsActivity" />
        <activity android:name=".TeacherGroupChatsActivity" />
        <activity android:name=".GroupChatViewActivity" />

        <activity android:name=".TeacherClassesActivity" />
        <activity android:name=".LiveTeacherClassActivity" />

        <activity android:name=".EditTaskActivity" />
        <activity android:name=".UploadTaskActivity" />
        <activity android:name=".StudentViewOngoingTaskActivity" />

        <activity android:name=".DrawingActivity" />

        <activity
            android:name=".TaskActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>